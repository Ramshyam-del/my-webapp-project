# Quantex Backend - Environment Configuration Template
# Copy this file to .env for development or .env.production for production
# NEVER commit real credentials to git!

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=4001
HOST=0.0.0.0
NODE_ENV=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Admin API Key (generate a secure random string)
ADMIN_API_KEY=your-secure-admin-api-key-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_TIMEOUT=86400000
SESSION_CLEANUP_INTERVAL=3600000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4001

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# CoinMarketCap API
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Redis (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
ENABLE_MONITORING=true

# =============================================================================
# NOTES
# =============================================================================
# Security Best Practices:
# 1. Use strong, randomly generated keys (min 32 characters)
# 2. Never share or commit real credentials
# 3. Rotate keys regularly (every 90 days recommended)
# 4. Use different credentials for dev/staging/production
# 5. Store production credentials in secure vault (e.g., AWS Secrets Manager)
